{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "rootDir": "packages",
    "noImplicitThis": false,
    "paths": {
      "@/*": ["./packages/*"],
      "@osprey-js/*": ["./packages/*"],
    },
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
