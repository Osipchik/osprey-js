{
  "compilerOptions": {
    "types": ["bun-types"],
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    "moduleDetection": "force",
    "moduleResolution": "node",

    "allowJs": true,
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "outDir": "build",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitThis": false,
    "removeComments": false,
    "noEmitOnError": true,
    "rootDir": "./packages",
    "baseUrl": "./packages",
    "paths": {
      "@/*": ["./packages/*"],
    },
  },
  "include": [
    "packages",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
