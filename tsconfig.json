{
  "compilerOptions": {
    "lib": ["es2020"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2020",
    "importHelpers": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "outDir": "dist",
    "noImplicitThis": false,
    "paths": {
      "@/*": ["./packages/*"],
      "@osprey-js/*": ["./packages/*"],
    }
  },
  "include": [
    "packages",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
